{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"outDir": "./build",
		"rootDir": ".",
		"jsx": "react"
	},
	"exclude": ["../node_modules"]
}